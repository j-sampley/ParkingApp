@using MudBlazor

@using ParkingApp.Common.Models.User
@using ParkingApp.Gui.Components.Account

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">
            Edit Contact
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" Model="@Contact">
            <ContactEditor Model="@Contact" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private MudForm form;

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public ContactBase Contact { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(Contact));

    private void Cancel() => MudDialog.Cancel();
}
